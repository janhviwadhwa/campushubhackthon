<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/backgroundd">

    <!-- Title Text -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="TITLE"
        android:textSize="42sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <FrameLayout
        android:id="@+id/filePreviewContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray">

        <TextView
            android:id="@+id/tvPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="No File Selected"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="395dp"
        android:layout_height="83dp"
        android:layout_below="@id/filePreviewContainer"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#F6FBFB">

        <!-- Like Button -->
        <ImageButton
            android:id="@+id/btnLike"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_marginEnd="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Like Button"
            android:src="@drawable/heartresize" />

        <!-- Share Button -->
        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="42dp"
            android:layout_height="34dp"
            android:layout_marginEnd="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Share Button"
            android:src="@drawable/shareresize" />

        <!-- Rating Buttons -->
        <ImageButton
            android:id="@+id/btnRate6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rate Button"
            android:src="@drawable/starresize" />

        <ImageButton
            android:id="@+id/btnRate11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rate Button"
            android:src="@drawable/starresize" />

        <ImageButton
            android:id="@+id/btnRate10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rate Button"
            android:src="@drawable/starresize" />

        <ImageButton
            android:id="@+id/btnRate8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rate Button"
            android:src="@drawable/starresize" />

        <ImageButton
            android:id="@+id/btnRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rate Button"
            android:src="@drawable/starresize" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/download"
        app:backgroundTint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"/>
</RelativeLayout>
